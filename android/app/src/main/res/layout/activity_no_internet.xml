<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/splash_gradient_background"
    android:padding="20dp">

    <!-- App Icon (Small Size) -->
    <ImageView
        android:id="@+id/imgNoInternet"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/app_logo"
        android:contentDescription="App Logo"
        android:layout_marginBottom="20dp"/>

    <!-- Error Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="لا يوجد اتصال بالإنترنت"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="10dp"/>

    <!-- Error Description -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="يرجى التحقق من اتصالك بالشبكة والمحاولة مرة أخرى"
        android:textSize="16sp"
        android:textColor="#E0E0E0"
        android:gravity="center"
        android:layout_marginBottom="40dp"/>

    <!-- Retry Button -->
    <Button
        android:id="@+id/btnRetry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="إعادة المحاولة"
        android:textColor="#065f46"
        android:textStyle="bold"
        android:textSize="16sp"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:backgroundTint="#FFFFFF"/>

</LinearLayout>